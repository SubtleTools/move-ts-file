{
  "name": "move-ts-file",
  "version": "0.2.1",
  "description": "Intelligent CLI tool to move TypeScript files and automatically update all import paths throughout your project",
  "type": "module",
  "main": "dist/move-ts.js",
  "types": "dist/move-ts.d.ts",
  "bin": {
    "move-ts-file": "./bin/move-ts-file.js"
  },
  "scripts": {
    "build": "bun build src/move-ts.ts --outfile=bin/move-ts-file.js --target=node && bun run generate-types",
    "build:docs": "astro build",
    "dev:docs": "astro dev",
    "preview:docs": "astro preview",
    "generate-types": "bun tsc",
    "docs": "bunx typedoc --out docs/api --entryPoints src/index.ts --plugin typedoc-plugin-markdown --theme markdown",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "bun tsc --noEmit",
    "prepack": "bun run typecheck && bun run lint && bun run format:check && bun run test && bun run build"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "CLAUDE.md"
  ],
  "dependencies": {
    "glob": "^10.3.10",
    "ts-morph": "^26.0.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@astrojs/starlight": "^0.35.2",
    "@astrojs/tailwind": "^6.0.2",
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^20.10.6",
    "astro": "^5.13.3",
    "dprint": "^0.50.1",
    "starlight-image-zoom": "^0.13.0",
    "starlight-kbd": "^0.2.0",
    "starlight-links-validator": "^0.17.1",
    "starlight-typedoc": "^0.21.3",
    "tailwindcss": "^4.1.12",
    "typedoc": "^0.28.11",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.8.1"
  },
  "keywords": [
    "typescript",
    "refactor",
    "imports",
    "move",
    "cli",
    "ast",
    "code-generation",
    "developer-tools",
    "ai-agents",
    "claude-code",
    "monorepo",
    "tsconfig-paths"
  ],
  "author": {
    "name": "Saulo Vallory",
    "url": "https://saulo.engineer"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SubtleTools/move-ts-file.git"
  },
  "homepage": "https://github.com/SubtleTools/move-ts-file#readme",
  "bugs": {
    "url": "https://github.com/SubtleTools/move-ts-file/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "imports": {
    "#src": "./src/index.ts",
    "#src/*": "./src/*"
  }
}
