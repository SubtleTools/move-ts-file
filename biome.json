{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "includes": ["*.{js,jsx,ts,tsx}", "test/specs/**/*.{js,jsx,ts,tsx}"],
    "ignoreUnknown": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off",
        "noUselessCatch": "error",
        "noUselessRename": "error",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "performance": {
        "noDelete": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "useDefaultSwitchClause": "error"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "error"
      },
      "a11y": {
        "useGenericFontNames": "off"
      }
    }
  },
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [
    {
      "includes": ["apps/rbx/**/*", "libs/ui/**/*", "libs/api-client/**/*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
